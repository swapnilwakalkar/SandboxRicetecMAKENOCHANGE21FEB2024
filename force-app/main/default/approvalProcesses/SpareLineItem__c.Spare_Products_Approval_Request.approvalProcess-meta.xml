        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>admin_dev1@ricetec.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nikhilnarendra.k@lancesoft.in</name>
                <type>user</type>
